@model VXL_KPI_system.Controllers.EditUserRolesViewModel

<h1>Edit Roles for @Model.Email</h1>

<form asp-action="EditUserRoles" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label>Roles</label>
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role" id="@role" @(Model.SelectedRoles.Contains(role) ? "checked" : "") />
                <label class="form-check-label" for="@role">@role</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save Roles</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}