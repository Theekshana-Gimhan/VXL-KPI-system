@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

<h1>Welcome to the KPI Monitoring System</h1>

<div class="button-container">
    @if (User.IsInRole("Staff"))
    {
        <a asp-controller="Admissions" asp-action="Create" class="btn btn-primary">Add Admissions KPI</a>
        <a asp-controller="VasaConsulting" asp-action="Create" class="btn btn-primary">Add Vasa Consulting KPI</a>
    }
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-success">View Dashboard</a>
    }
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="Index" class="btn btn-info">User Management</a>
    }
</div>

<style>
    .button-container {
        display: flex;
        gap: 15px;
        margin-top: 20px;
    }
</style>